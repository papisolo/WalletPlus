            <a asp-action="Delete" asp-Controller="Customer" asp-route-id="@Language.Id"  class="btn-danger text-decoration-none" onclick="return confirm('Are you sure you want to delete?')">Delete<i class="fa fa-trash"></i></a>
        </td>
    </tr>
        } </tbody>
          <tfoot>
